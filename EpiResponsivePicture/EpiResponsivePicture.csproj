<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Forte.EpiResponsivePicture</RootNamespace>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyVersion Condition=" '$(BUILD_BUILDNUMBER)' == '' ">1.0.0.1</AssemblyVersion>
    <AssemblyVersion Condition=" '$(BUILD_BUILDNUMBER)' != '' ">1.0.0.$(BUILD_BUILDNUMBER)</AssemblyVersion>
    <FileVersion Condition=" '$(BUILD_BUILDNUMBER)' == '' ">1.0.0.1</FileVersion>
    <FileVersion Condition=" '$(BUILD_BUILDNUMBER)' != '' ">1.0.0.$(BUILD_BUILDNUMBER)</FileVersion>
    <PackageId>Forte.EpiResponsivePicture</PackageId>
    <PackageVersion Condition=" '$(BUILD_BUILDNUMBER)' == '' ">1.0.0.1</PackageVersion>
    <PackageVersion Condition=" '$(BUILD_BUILDNUMBER)' != '' ">1.0.0.$(BUILD_BUILDNUMBER)</PackageVersion>
    <Title>Forte.EpiResponsivePicture</Title>
    <Authors>Forte_ Digital</Authors>
    <Description>Smart responsive images in EPiServer with ImageResizing.Net and Focal point</Description>
    <PackageProjectUrl>https://github.com/fortedigital/EpiResponsivePicture</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/fortedigital/EpiResponsivePicture/blob/master/LICENSE</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>

    <!-- Include symbol files (*.pdb) in the built .nupkg -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="EPiServer.CMS.AspNetCore" Version="12.6.0" />
    <PackageReference Include="EPiServer.CMS.Core" Version="12.6.0" />
    <PackageReference Include="EPiServer.Framework" Version="12.6.0" />
    <PackageReference Include="EPiServer.CMS.UI" Version="12.7.0" />
  </ItemGroup>

</Project>
