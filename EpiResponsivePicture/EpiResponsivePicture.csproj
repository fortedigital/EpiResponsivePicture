<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Forte.EpiResponsivePicture</RootNamespace>
    <TargetFrameworks>net461;net462;net47;net471;net472;net48</TargetFrameworks>
    <AssemblyVersion Condition=" '$(BUILD_BUILDNUMBER)' == '' ">0.0.0.1</AssemblyVersion>
    <AssemblyVersion Condition=" '$(BUILD_BUILDNUMBER)' != '' ">0.0.0.$(BUILD_BUILDNUMBER)</AssemblyVersion>
    <FileVersion Condition=" '$(BUILD_BUILDNUMBER)' == '' ">0.0.0.1</FileVersion>
    <FileVersion Condition=" '$(BUILD_BUILDNUMBER)' != '' ">0.0.0.$(BUILD_BUILDNUMBER)</FileVersion>
    <PackageId>Forte.EpiResponsivePicture</PackageId>
    <PackageVersion Condition=" '$(BUILD_BUILDNUMBER)' == '' ">0.0.0.1</PackageVersion>
    <PackageVersion Condition=" '$(BUILD_BUILDNUMBER)' != '' ">0.0.0.$(BUILD_BUILDNUMBER)</PackageVersion>
    <Title>Forte.EpiResponsivePicture</Title>
    <Authors>Forte_ Digital</Authors>
    <Description>Smart responsive images in EPiServer with ImageResizing.Net and Focal point</Description>
    <PackageProjectUrl>https://github.com/fortedigital/EpiResponsivePicture</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/fortedigital/EpiResponsivePicture/blob/master/LICENSE</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>

    <!-- Include symbol files (*.pdb) in the built .nupkg -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <PackageReference Include="EPiServer.CMS.AspNet" Version="11.11.2" />
    <PackageReference Include="EPiServer.CMS.Core" Version="11.11.2" />
    <PackageReference Include="EPiServer.Framework" Version="11.11.2" />
    <PackageReference Include="EPiServer.ServiceLocation.StructureMap" Version="2.0.1" />
    <PackageReference Include="ImageResizer.Plugins.EPiServerBlobReader" Version="7.0.0" />
